<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!--<ListView-->
        <!--android:id="@+id/stationery_listview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="10pt"></ListView>-->

    <ImageView
        android:id="@+id/stationery_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/pen1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="Name"
        android:id="@+id/stationery_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="8pt"
        android:layout_above="@+id/stationery_upgrade"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:background="@drawable/knowledge"


        android:layout_below="@+id/stationery_name"
        android:layout_toEndOf="@+id/stationery_image"
        android:layout_marginStart="38dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:text="Price"
        android:id="@+id/stationery_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="6pt"


        android:layout_below="@+id/stationery_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:text="Upgrade"
        android:id="@+id/stationery_upgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stationery_image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp" />

</RelativeLayout>