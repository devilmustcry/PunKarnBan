<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!--<ListView-->
        <!--android:id="@+id/stationery_listview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="10pt"></ListView>-->

    <ImageView
        android:id="@+id/stationery_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pen1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:text="Name"
        android:id="@+id/stationery_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="10pt"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/stationery_image"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Upgrade"
        android:id="@+id/stationery_upgrade"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stationery_name"
        android:layout_centerHorizontal="true" />

</RelativeLayout>